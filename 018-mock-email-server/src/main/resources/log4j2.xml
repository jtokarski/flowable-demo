<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true">

    <Appenders>
        <Appender type="Console" name="STDOUT-APP">
            <!--
                 https://logging.apache.org/log4j/2.x/manual/layouts.html#PatternLocation

                 (on logger class name) https://logging.apache.org/log4j/2.x/manual/pattern-layout.html#converter-logger
                 (on paddings) https://logging.apache.org/log4j/2.x/manual/pattern-layout.html#format-modifiers
            -->
            <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level{length=5} %48.48logger{1.} : %notEmpty{[%markerSimpleName]} %message%n%throwable" />
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT-APP" />
        </Root>

        <Logger name="com.icegreen.greenmail" level="debug" additivity="false">
            <AppenderRef ref="STDOUT-APP" />
        </Logger>
    </Loggers>

</Configuration>
