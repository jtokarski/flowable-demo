<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true">

    <Appenders>
        <Appender type="Console" name="STDOUT-APP">
            <!-- https://logging.apache.org/log4j/2.x/manual/layouts.html#PatternLocation -->
            <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level{length=5} : %notEmpty{[%markerSimpleName]} %message%n%throwable" />
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT-APP" />
        </Root>

        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="STDOUT-APP" />
        </Logger>
        <Logger name="org.hibernate.orm.jdbc.bind" level="trace" additivity="false">
            <AppenderRef ref="STDOUT-APP" />
        </Logger>

        <!-- SQL execution logging is logged to the LoggerListener logger at DEBUG level -->
        <Logger name="org.jooq.tools.LoggerListener" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Other jOOQ related debug log output -->
        <Logger name="org.jooq" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>


    </Loggers>

</Configuration>
